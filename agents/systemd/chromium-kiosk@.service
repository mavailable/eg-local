[Unit]
Description=Chromium Kiosk for device %i
After=network-online.target
Wants=network-online.target

[Service]
User=pi
Environment=XAUTHORITY=/home/pi/.Xauthority
Environment=DISPLAY=:0
ExecStart=/usr/bin/chromium --noerrdialogs --disable-session-crashed-bubble --incognito --kiosk http://core-01:5173/?id=%i
Restart=always
RestartSec=3

[Install]
WantedBy=graphical.target
